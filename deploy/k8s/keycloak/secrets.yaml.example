# Keycloak Secrets Template
# Copy this file to secrets.yaml and fill in the values
# DO NOT commit secrets.yaml to version control
#
# To create secrets via kubectl instead:
#   kubectl create secret generic keycloak-secrets \
#     --from-literal=KEYCLOAK_ADMIN='admin' \
#     --from-literal=KEYCLOAK_ADMIN_PASSWORD='your-secure-password' \
#     --from-literal=KC_DB_USERNAME='keycloak' \
#     --from-literal=KC_DB_PASSWORD='your-db-password' \
#     -n auth9

apiVersion: v1
kind: Secret
metadata:
  name: keycloak-secrets
  namespace: auth9
  labels:
    app.kubernetes.io/name: keycloak
    app.kubernetes.io/component: auth-engine
    app.kubernetes.io/part-of: auth9
type: Opaque
stringData:
  # Keycloak admin credentials
  KEYCLOAK_ADMIN: "admin"
  KEYCLOAK_ADMIN_PASSWORD: "CHANGE_ME"

  # Database credentials
  KC_DB_USERNAME: "keycloak"
  KC_DB_PASSWORD: "CHANGE_ME"

  # HMAC secret for ext-event-http webhook verification (must match KEYCLOAK_WEBHOOK_SECRET in auth9-secrets)
  KC_SPI_EVENTS_LISTENER_EXT_EVENT_HTTP_HMAC_SECRET: "CHANGE_ME_must_match_auth9_KEYCLOAK_WEBHOOK_SECRET"  # pragma: allowlist secret
